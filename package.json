{
    "name": "fv-common",
    "version": "1.9.0",
    "description": "Common helper functions",
    "license": "SEE LICENSE IN licence.md",
    "repository": "https://fj.byrtz.de/ibey/fv-common.git",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./node": {
            "types": "./dist/node.d.ts",
            "import": "./dist/node.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "run-s typecheck build:gen build:commit",
        "build:commit": "git add dist/ && git diff --staged --quiet || git commit -m 'build: dist'",
        "build:gen": "tsc",
        "build:push": "git push",
        "dev": "tsc --watch",
        "barrel": "tsx scripts/generate-barrel.mts",
        "git:chore": "git add package.json pnpm-lock.yaml && git commit -m 'chore(deps): bump'",
        "helper:clean:src:js": "find ./src -name \"*.js\" -type f -delete -print",
        "lint": "run-s lint:js pretty-print pretty-print-package",
        "lint:js": "eslint . --fix",
        "main:release": "run-s build build:push release",
        "pnpm:dedupe": "pnpm dedupe",
        "pnpm:renew": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
        "pnpm:update": "corepack use pnpm@latest && pnpm --interactive update",
        "pretty-print": "prettier --config .prettierrc.json --log-level error --write .",
        "pretty-print-package": "pnpm prettier-package-json --write ./package.json",
        "push": "git push",
        "release": "release-it --ci",
        "typecheck": "tsc --noEmit"
    },
    "engines": {
        "node": ">= 24"
    },
    "sideEffects": false,
    "dependencies": {
        "atomically": "^2.1.0",
        "dayjs": "^1.11.19",
        "svg-path-commander": "^2.1.11",
        "colorjs.io": "^0.6.0-beta.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@commitlint/types": "^20.2.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.2",
        "@release-it/conventional-changelog": "^10.0.3",
        "@tsconfig/node24": "^24.0.3",
        "@types/node": "^25.0.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-n": "^17.23.1",
        "eslint-plugin-perfectionist": "^4.15.1",
        "eslint-plugin-unicorn": "^62.0.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "npm-run-all2": "^8.0.4",
        "prettier": "^3.7.4",
        "prettier-package-json": "^2.8.0",
        "release-it": "^19.1.0",
        "ts-morph": "^27.0.2",
        "tsx": "^4.7.0",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.49.0"
    },
    "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ],
        "overrides": {
            "@types/parse-path@7.1.0": "-",
            "conventional-changelog-conventionalcommits": "^9.1.0",
            "glob": "^9"
        }
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release v${version}",
            "push": false
        },
        "github": {
            "release": false
        },
        "gitlab": {
            "release": false
        },
        "npm": {
            "publish": false
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "infile": "CHANGELOG.md",
                "preset": "conventionalcommits"
            }
        }
    }
}
