{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "lib": ["ESNext"],
        "types": ["node"],
        "noEmit": true
    },
    "include": [
        "src/node.ts",
        "src/node/**/*",
        "src/locale.ts",
        "src/sort.ts",
        "scripts/**/*",
        "eslint-rules/**/*",
        "commitlint.config.ts",
        "tsdown.config.ts"
    ]
}
