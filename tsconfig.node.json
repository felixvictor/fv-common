{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "types": ["node"]
    },
    "include": [
        "src/node.ts",
        "src/node/**/*",
        "src/locale.ts",
        "src/sort.ts",
        "scripts/**/*",
        "eslint-rules/**/*",
        "*.config.*"
    ]
}
